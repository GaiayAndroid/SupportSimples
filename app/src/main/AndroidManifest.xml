<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.gaiay.supportsimples">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="cn.gaiay.supportsimples.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="cn.gaiay.supportsimples.AdapterActivity" />
        <activity android:name="cn.gaiay.supportsimples.adapter.DragActivity" />
        <activity android:name="cn.gaiay.supportsimples.adapter.HorizontalRecyclerActivity" />
        <activity android:name="cn.gaiay.supportsimples.adapter.MultiItemActivity" />
        <activity android:name="cn.gaiay.supportsimples.adapter.RefreshAndLoadMoreActivity" />

        <activity android:name="cn.gaiay.supportsimples.TabLayoutActivity" />
        <activity android:name="cn.gaiay.supportsimples.tablayout.CommonTabLayoutActivity" />
        <activity android:name="cn.gaiay.supportsimples.tablayout.ScrollableTabLayoutActivity" />
    </application>

</manifest>